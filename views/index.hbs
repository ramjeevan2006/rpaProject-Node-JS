
    <div class="row">
        <div class="col-md-8">
        <h1  class="well well-lg">{{ title }}</h1>
        </div>
    </div>
    <div class="row" >
        <div class="col-md-3">

            <form  ref='uploadForm' id='uploadForm' action='/upload' method='post' encType='multipart/form-data'>
                <input type="file" name="sampleFile" style="display: inline-block"/>
                <button style="display: inline-block" type="submit">Upload!</button>
            </form>
        </div>

    </div>

    <div class="row">

        {{# if isUploaded }}
        <div class="col-md-4">
            <img class="well well-lg" width="100%" hight ="%" src="/Images/{{ fileName }}"/>
        </div>
        <div class="col-md-1">
            <form  ref='recognizeImage' id='recognizeImage'  action='/recognizeImage' method='get' >

                <button type="submit" style="margin-top: 85%" class="btn btn-info btn-arrow-right">Recognize</button>
            </form>
        </div>
        {{/if}}

        {{# if isRecognized }}
        <div class="col-md-3" >
          <form  class="well well-lg" >
             {{# each resultdata.document.text }}
                {{# ifCond this.id '==' 'employeeName'  }}
                     <div class="input">
                     <label  style="display: inline-block; width:45%" >Employee Name:    </label>
                     {{# each this.line }}
                        <label style="display: inline-block;border-style: dotted;padding-left: 8px;padding-right: 8px;border-color: forestgreen; " contenteditable="true" >{{{verifyText this.char}}}</label>
                     {{/each}}
                     </div>
                {{/ifCond}}

                {{# ifCond this.id '==' 'ordinaryPayment'  }}
                     <div class="input">
                         <label  style="display: inline-block; width:45%" >Ordinary Payment:    </label>
                         {{# each this.line }}
                             <label style="display: inline-block ;border-style: dotted;padding-left: 8px;padding-right: 8px;border-color: forestgreen; " contenteditable="true">{{{verifyText this.char}}}</label>
                         {{/each}}
                     </div>
                {{/ifCond}}

                 {{# ifCond this.id '==' 'totalOrdinaryPayment'  }}
                     <div class="input">
                         <label  style="display: inline-block; width:45%" >Total Ordinary Payment:    </label>
                         {{# each this.line }}
                             <label style="display: inline-block ; border-style: dotted;padding-left: 8px;padding-right: 8px; border-color: forestgreen;" contenteditable="true">{{{verifyText this.char}}}</label>
                         {{/each}}
                     </div>
                 {{/ifCond}}

                 {{# ifCond this.id '==' 'grossPay'  }}
                     <div class="input">
                         <label style="display: inline-block; width:45%" >Gross Pay:    </label>
                         {{# each this.line }}
                             <label style="display: inline-block ;border-style: dotted;padding-left: 8px;padding-right: 8px;border-color: forestgreen; " contenteditable="true">{{{verifyText this.char}}}</label>
                         {{/each}}
                     </div>
                 {{/ifCond}}

                 {{# ifCond this.id '==' 'netPay'  }}
                     <div class="input">
                         <label  style="display: inline-block; width:45%" >Net Pay:    </label>
                         {{# each this.line }}
                             <label style="display: inline-block;border-style: dotted;padding-left: 8px;padding-right: 8px;border-color: forestgreen; " contenteditable="true">{{{verifyText this.char}}}</label>
                         {{/each}}
                     </div>
                 {{/ifCond}}

                 {{# ifCond this.id '==' 'accountNumber'  }}
                     <div class="input">
                         <label style="display: inline-block; width:45%" >Account Number:    </label>
                         {{# each this.line }}
                             <label style="display: inline-block;border-style: dotted;padding-left: 8px;padding-right: 8px;border-color: forestgreen; " contenteditable="true">{{{verifyText this.char}}}</label>
                         {{/each}}
                     </div>
                 {{/ifCond}}

             {{/each}}
            <button type="submit">Process</button>
        </form>
        </div>
        {{/if}}
       </div>


